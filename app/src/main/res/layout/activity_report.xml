<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/drop_report_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/posts_all" />

    <Button
        android:id="@+id/btn_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Payments" />

    <EditText
        android:id="@+id/edit_get_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Personal Code:" />

    <Button
        android:id="@+id/btn_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Person" />

    <EditText
        android:id="@+id/edit_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter number:"
        android:inputType="number"/>

    <Button
        android:id="@+id/btn_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Top" />

    <TextView
        android:id="@+id/txt_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>